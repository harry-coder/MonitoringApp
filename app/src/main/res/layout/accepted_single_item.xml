<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:ellipsize="end"
            android:textColor="#313641"
            android:maxLines="2"
            android:fontFamily="@font/alegreya_sans_sc"


            android:padding="5dp"

            android:text="Upload Images of 60 door hangers formsector 45, and 46"
            android:textSize="22sp"
           />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_description"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"


            >

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:fontFamily="@font/alegreya_sans_sc"

                android:drawableStart="@drawable/accept_clock_icon"
                android:padding="8dp"
                android:text="Start: 26th jan 2018"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/reject_clock_icon"
                android:fontFamily="@font/alegreya_sans_sc"

                android:padding="8dp"
                android:text="End: 28th jan 2018"
                android:textSize="18sp" />
        </TableRow>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/tv_description"
            android:layout_below="@+id/view"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentEnd="true"

            android:background="@drawable/button_shape"
            android:padding="3dp"
            android:textSize="16sp"
            android:fontFamily="@font/alegreya_sans_sc"

            android:text="Accepted"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tv_incentive"

            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/tv_status"
            android:layout_marginStart="17dp"
            android:background="@drawable/round_background"
            android:fontFamily="@font/alegreya_sans_sc"

            android:padding="5dp"
            android:text="â‚¹150/-"
            android:textSize="15sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>